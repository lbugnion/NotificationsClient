{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"unique-name": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "A unique name for the Azure Functions app and the Notification Hub. If the name is not unique, this template won't pass validation."
            }
        }
	},
    "variables": {
		"location" : "[resourceGroup().location]",
		"storage-name" : "[concat('parameters('unique-name'), 'store')]",
		"plan-name" : "[concat('parameters('unique-name'), 'plan')]"
	},
    "resources": [
        {
            "apiVersion": "2015-05-01",
            "name": "[parameters('unique-name')]",
            "type": "microsoft.insights/components",
            "location": "[variables('location')]",
            "properties": {
				"ApplicationId": "[parameters('unique-name')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "[variables('storage-name')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('plan-name')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "properties": {
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        }		
	],
    "outputs": {}
}